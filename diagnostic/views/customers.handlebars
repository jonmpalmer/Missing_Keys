<table>
    <div class="site-form">
	<form class="cust-login-form">
	    <div class="form-item">
		<label for="lfname">First name:</label>
		<input type="text" name="username">
	    </div>
	    <div class="form-item">
		<label for="lpass">Last name:</label>
		<input type="text">
	    </div>
	    <div class="form-item">
		<input type="submit" value="Search">
	    </div>
	</form>
    </div>
    <div class="accounts">
	<h3 class="accounts">Accounts</h3>
    </div>
    <div>
	<table>
	    <thead>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Phone</th>
		<th>Address</th>
	    </thead>
	    <tbody>
		{{#each customers}} 
		<tr>
		    <td>{{firstName}}</td>
		    <td>{{lastName}}</td>
		    <td>{{email}}</td>
		    <td>{{phone}}</td>
		    <td>{{addressID}}</td>
		    <td><button onclick= "deleteCustomer({{customerID}})">Delete</button></td>
		    <td><a href="/customers/{{customerID}}">Update</a></td>
		    <td><a href="accounts_home.html">View</a></td>
		</tr>
		{{/each}}
	    </tbody>
	    <form id="addcustomer" action="/customers" method='post">
		First name: <input type="text" name="firstName"><br>
		Last name: <input type="text" name="lastName" required><br>
		Email: <input type="text" name="email" required><br>
		Address: <input type="text" name="add1" required><br>
		Address: <input type="text" name="add2"><br>
		Zipcode: <input type="text" name="zip" required><br>
		Phone: <input type="text" name="phone"><br>
		<input type="submit" value="Submit">
	    </form>
    </div>
</table>
        <div class="site-form">
            <form class="cust-signup-form">
                <div class="form-email">
                    <label for="email">Email:</label>
                    <input type="text" name="email">
                </div>
                    <label for="fname">First name:</label>
                    <input type="text" name="fname" required>
                </div>
                <div class="form-lname">
                    <label for="lname">Last name:</label>
                    <input type="text" name="lname" required>
                </div>
                <div class="form-address1">
                    <label for="add1">Address Line 1:</label>
                    <input type="text" name="add1" required>
                </div>
                <div class="form-address2">
                    <label for="add2">Address Line 2:</label>
                    <input type="text" name="add2">
                </div>
                <div class="form-zip">
                    <label for="zip">ZIP:</label>
                    <input type="text" name="zip" required>
                </div>
                <div class="form-item">
                    <label for="phone">Phone:</label>
                    <input type="text" name="phone">
                </div>
                <div class="form-item">
                    <input type="submit" value="Submit">
                </div>
            </form>
        </div>
