<div class="site-form">
    <form class="prod-search-form">
        <div class="form-item">
            <label for="lfname">Product: </label>
            <input type="text" name="username">
        </div>
        <div class="form-item">
            <label for="lpass">Model: </label>
            <input type="text">
        </div>
        <div class="form-item">
            <input type="submit" value="Search">
        </div>
    </form>
</div>
<div class="products">
    <h3 class="products">Products</h3>
</div>
        <div>
    <table>
        <thead>
            <th>Product</th>
            <th>Type</th>
            <th>Model</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Supplier</th>
        </thead>
        <tbody>
        {{#each products}} 
            <tr>
                <td>{{name}}</td>
                <td>{{type}}</td>
                <td>{{model}}</td>
                <td>{{quant}}</td>
                <td>{{price}}</td>
                <td>{{supplierID}}</td>
                <td><button onclick= "viewProduct {{productID}})">View Product</button></td>
                <td><button onclick= "deleteProduct {{productID}})">Delete</button></td>
                <td><a href="/products/{{productID}}">Update</a></td>
            </tr>
            {{/each}} 
        </tbody>
    </table>
</div>
<div class="products">
    <h3 class="products">Selected Product</h3>
</div>
<div class="site-form">
       <form class="add-order-form">
            <div class="form-addOrder">
                <label for="orderID">Order ID: </label>
                <input type="text" name="orderID">
            </div>
            <div class="form-quant">
                <label for="quant">Quantity:</label>
                <input type="text" name="quant" required>
            </div>
            <div class="form-item">
                <input type="submit" value="Add to Order">
            </div>
     </form>
   </div>    
</div>
